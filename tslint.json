{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "ban": [
            true,
            [
                "Reflect",
                "getMetadata",
                "use ~bdo/utils/metadata getMetadata instead"
            ],
            [
                "Reflect",
                "defineMetadata",
                "use ~bdo/utils/metadata defineMetadata instead"
            ]
        ],
        "semicolon": [
            true,
            "always"
        ],
        "no-string-literal": true,
        "no-trailing-whitespace": true,
        "no-for-in-array": true,
        "no-unbound-method": true,
        "no-duplicate-super": true,
        "no-angle-bracket-type-assertion": false,
        "no-empty": false,
        "no-var-keyword": true,
        "no-duplicate-variable": true,
        "no-console": true,
        "no-implicit-dependencies": [
            true,
            [
                "~root",
                "~static",
                "~server",
                "~client",
                "~bdo",
                "chai",
                "less",
                "less-plugin-clean-css"
            ]
        ],
        "no-unused-expression-chai": true,
        "no-unused-expression": false,
        "completed-docs": true,
        "deprecation": true,
        "ban-types": false,
        "interface-name": true,
        "class-name": true,
        "max-classes-per-file": [
            true,
            3,
            "exclude-class-expressions"
        ],
        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "protected-static-field",
                    "private-static-field",
                    "public-instance-field",
                    "protected-instance-field",
                    "private-instance-field",
                    "public-static-method",
                    "protected-static-method",
                    "private-static-method",
                    "public-constructor",
                    "protected-constructor",
                    "private-constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "quotemark": false,
        "encoding": true,
        "triple-equals": true,
        "curly": [
            true,
            "ignore-same-line"
        ],
        "whitespace": [
            true,
            "check-separator",
            "check-type",
            "check-preblock",
            "check-decl"
        ],
        "prefer-for-of": true,
        "forin": true,
        "linebreak-style": [
            true,
            "LF"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ]
    },
    "rulesDirectory": [
        "tslint-no-unused-expression-chai"
    ]
}
