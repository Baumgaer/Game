{
    "extends": "./baseTSConfig.json",
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "outDir": "out",
        "rootDir": "source",
        "incremental": true,
        "inlineSourceMap": true,
        "tsBuildInfoFile": "var/buildcache/.backend",
        "baseUrl": ".",
        "paths": {
            "~root/*": [
                "source/*"
            ],
            "~client/*": [
                "source/app/client/ts/*"
            ],
            "~bdo/*": [
                "source/app/*"
            ],
            "~server/*": [
                "source/app/server/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "source/app/client",
        "out",
        "var",
        "source/app/config",
        "source/app/tools",
        "source/app/views",
        "source/app/server/config"
    ]
}
