{
    "extends": "./baseTSConfig.json",
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "outDir": "out",
        "rootDir": "source",
        "incremental": true,
        "tsBuildInfoFile": "var/buildcache/.backend"
    },
    "exclude": [
        "node_modules",
        "source/app/client",
        "out",
        "var",
        "source/app/config",
        "source/app/tools",
        "source/app/views",
        "source/app/server/config"
    ]
}
