{
    "extends": "./../../../../tsconfig.base.json",
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "rootDir": "./../../",
        "outDir": "./../../../../out/app/client/js",
        "sourceMap": true,
        "incremental": true,
        "tsBuildInfoFile": "./../../../../var/buildcache/.frontend",
        "baseUrl": ".",
        "paths": {
            "~server/*": [
                "./../../server/*"
            ],
            "~client/*": [
                "./*"
            ],
            "~static/*": [
                "./../*"
            ],
            "~bdo/*": [
                "./../../*"
            ],
            "~root/*": [
                "./../../../*"
            ],
            "~project": [
                "./../../../../*"
            ]
        }
    },
    "exclude": [
        "./../../server",
        "./../../../../node_modules"
    ]
}
