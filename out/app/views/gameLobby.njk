{% extends "master.njk" %}
{% block body %}
<img src="/images/helloWorld.jpg" alt="test">

<script>
    console.log(location.host);
    let webSocket = new WebSocket(`ws://${location.host}`);
    webSocket.onopen = function () {
        console.log("Client is connected");
        this.send(JSON.stringify({
            type: "message",
            data: "looool"
        }));
    };

    webSocket.onmessage = function (data, flags) {
        console.log(`WebSocketClient message: `, data);
    }

    webSocket.onerror = function (event) {
        console.log(event);
    }

</script>
{% endblock %}
